<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        card_view:cardBackgroundColor="@color/white"
        card_view:cardCornerRadius="5dp"
        card_view:contentPaddingBottom="@dimen/_10sdp"
        android:layout_margin="@dimen/_2sdp"
        card_view:cardPreventCornerOverlap = "false"
        card_view:cardElevation="5dp" >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:scaleType="fitXY"
        android:layout_gravity="center"
        android:src="@drawable/detol"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
<androidx.appcompat.widget.AppCompatTextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Ponds Dreamflower pink Lily Fragnant Talc 100g Rs.85.50"
    android:textSize="@dimen/_12sdp"
    android:fontFamily="@font/googlesans_medium"
    android:textColor="#413f3f"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View All Odrders"
                android:fontFamily="@font/googlesans_medium"
                android:textColor="#5fb55f"
                android:drawableEnd="@drawable/ic_baseline_arrow_forward_12"
                android:id="@+id/customerview_orders"/>


            <RatingBar
                android:theme="@style/RatingBar"
                android:rating="3"
                android:stepSize="0.5"
                android:numStars="5"
                android:layout_width="wrap_content"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_height="@dimen/_20sdp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Write a Review"
                android:fontFamily="@font/googlesans_medium"
                android:textColor="#bebebe"
                android:drawableEnd="@drawable/ic_baseline_arrow_forward_12"
                android:id="@+id/reviewtxt"/>
        </LinearLayout>

</LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>