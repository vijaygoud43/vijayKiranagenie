<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
card_view:cardBackgroundColor="#e7fbfa"
        card_view:cardCornerRadius="5dp"
        card_view:contentPaddingBottom="@dimen/_10sdp"
        android:layout_margin="@dimen/_2sdp"
        card_view:cardPreventCornerOverlap = "false"
        card_view:cardElevation="5dp" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <ImageView
        android:id="@+id/cat_allimage"
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:paddingTop="@dimen/_5sdp"
        android:layout_gravity="center"
        android:foregroundGravity="center"
        android:background="@drawable/image_circle_bg"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/catall_itemname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="@dimen/_10sdp"
        android:singleLine="true"

        android:layout_gravity="center"
        android:lineSpacingExtra="@dimen/_5sdp"
        android:fontFamily="@font/googlesans_medium"
        android:textColor="#413f3f"
        android:textAlignment="center" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>