<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.profile.DeliveryAdress">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/background_bg"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="SAVED ADDRESSES"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:drawablePadding="@dimen/_3sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:textSize="@dimen/_8sdp"
                    android:id="@+id/add_delivery_address"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:drawableLeft="@drawable/ic_baseline_add_white"
                    android:layout_marginLeft="@dimen/_1sdp"
                   android:background="@color/formal_color"
                    android:text="Add new Address"/>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="5dp"
            card_view:contentPaddingBottom="@dimen/_10sdp"
            android:layout_margin="@dimen/_2sdp"
            card_view:cardPreventCornerOverlap = "false"
            card_view:cardElevation="5dp" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Arun"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:fontFamily="@font/googlesans_bold"
                    android:textColor="#000" />
            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Plot No.856, 3rd floor, Ayyappa Sociaty, Madhapur,Hyderabad,Telangana 500081, Appolo pharmacy."
                android:textSize="@dimen/_12sdp"
                android:fontFamily="@font/googlesans_regular"
                android:textColor="#413f3f"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile :"
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="@font/googlesans_regular"
                        android:textColor="#413f3f"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9618133646"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="@font/googlesans_regular"
                        android:textColor="#413f3f"/>
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:padding="@dimen/_2sdp"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:background="#008c00"
                    android:textColor="@color/white"
                    android:text="Edit"/>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:textColor="@color/white"
                    android:layout_marginLeft="@dimen/_1sdp"
                  android:background="#041763"
                    android:text="Remove"/>
            </LinearLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>
        </LinearLayout>
        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            card_view:cardBackgroundColor="@color/white"
            card_view:cardCornerRadius="5dp"
            card_view:contentPaddingBottom="@dimen/_10sdp"
            android:layout_margin="@dimen/_2sdp"
            card_view:cardPreventCornerOverlap = "false"
            card_view:cardElevation="5dp" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_margin="@dimen/_10sdp"
                android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lalith"
                    android:textSize="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:fontFamily="@font/googlesans_bold"
                    android:textColor="#000" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Plot No.856, 3rd floor, Ayyappa Sociaty, Madhapur,Hyderabad,Telangana 500081, Appolo pharmacy."
                    android:textSize="@dimen/_12sdp"
                    android:fontFamily="@font/googlesans_regular"
                    android:textColor="#413f3f"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mobile :"
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="@font/googlesans_regular"
                        android:textColor="#413f3f"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="9618133646"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="@font/googlesans_regular"
                        android:textColor="#413f3f"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_5sdp"

                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:background="#008c00"
                        android:textColor="@color/white"
                        android:text="Edit"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="@dimen/_1sdp"
                        android:background="#041763"
                        android:text="Remove"/>
                </LinearLayout>
            </LinearLayout>


        </androidx.cardview.widget.CardView>
</LinearLayout>
</LinearLayout>