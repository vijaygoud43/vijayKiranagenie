<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.profile.Refunds">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            card_view:cardBackgroundColor="#f0f3fa"
            card_view:cardCornerRadius="@dimen/_10sdp"
            card_view:contentPaddingBottom="@dimen/_10sdp"
            android:layout_margin="@dimen/_2sdp"
            card_view:cardPreventCornerOverlap = "false"
            card_view:cardElevation="5dp" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="INVOICE ID:"
                        android:textColor="#454545"
                        android:fontFamily="@font/googlesans_medium"
                        android:textSize="@dimen/_9sdp"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_8sdp"
                        android:textColor="#454545"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:text="INV-12-12-009"
                        android:fontFamily="@font/googlesans_medium"
                        android:id="@+id/txt_invoice_id"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ORDER ID:"
                        android:textColor="#454545"
                        android:fontFamily="@font/googlesans_medium"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:textSize="@dimen/_9sdp"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_8sdp"
                        android:textColor="#454545"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:text="CXS-0000758-12"
                        android:fontFamily="@font/googlesans_medium"
                        android:id="@+id/txt_order_id"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   android:padding="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AMOUNT:"
                        android:textColor="#454545"
                        android:fontFamily="@font/googlesans_medium"
                        android:textSize="@dimen/_9sdp"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_8sdp"
                        android:textColor="#454545"
                        android:fontFamily="@font/googlesans_medium"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:text="1450"
                        android:id="@+id/txt_amount"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="STATUS:"
                        android:fontFamily="@font/googlesans_medium"
                        android:textColor="#454545"
                        android:layout_marginLeft="@dimen/_30sdp"
                        android:textSize="@dimen/_9sdp"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_8sdp"
                        android:textColor="#fe730c"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:text="INTIATED"
                        android:fontFamily="@font/googlesans_medium"
                        android:id="@+id/txt_transactionmode"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AMOUNT:"
                        android:textColor="#454545"
                        android:fontFamily="@font/googlesans_medium"
                        android:textSize="@dimen/_9sdp"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_8sdp"
                        android:textColor="#454545"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:fontFamily="@font/googlesans_medium"
                        android:text="03-12-2021"
                        android:id="@+id/txt_date"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:background="#454545" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/googlesans_medium"
                    android:textColor="#E80D7B"
                    android:drawableRight="@drawable/ic_outline_file_download_24"
                    android:text="Download"/>


            </LinearLayout>


        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            card_view:cardBackgroundColor="#f0f3fa"
            card_view:cardCornerRadius="@dimen/_10sdp"
            card_view:contentPaddingBottom="@dimen/_10sdp"
            android:layout_margin="@dimen/_2sdp"
            card_view:cardPreventCornerOverlap = "false"
            card_view:cardElevation="5dp" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="INVOICE ID:"
                        android:textColor="#454545"
                        android:fontFamily="@font/googlesans_medium"
                        android:textSize="@dimen/_9sdp"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_8sdp"
                        android:textColor="#454545"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:text="INV-12-12-009"
                        android:fontFamily="@font/googlesans_medium"
                        android:id="@+id/txt_invoice_id"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ORDER ID:"
                        android:textColor="#454545"
                        android:fontFamily="@font/googlesans_medium"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:textSize="@dimen/_9sdp"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_8sdp"
                        android:textColor="#454545"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:text="CXS-0000758-12"
                        android:fontFamily="@font/googlesans_medium"
                        android:id="@+id/txt_order_id"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AMOUNT:"
                        android:textColor="#454545"
                        android:fontFamily="@font/googlesans_medium"
                        android:textSize="@dimen/_9sdp"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_8sdp"
                        android:textColor="#454545"
                        android:fontFamily="@font/googlesans_medium"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:text="1450"
                        android:id="@+id/txt_amount"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="STATUS:"
                        android:fontFamily="@font/googlesans_medium"
                        android:textColor="#454545"
                        android:layout_marginLeft="@dimen/_30sdp"
                        android:textSize="@dimen/_9sdp"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_8sdp"
                        android:textColor="#146b00"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:text="Refunded"
                        android:fontFamily="@font/googlesans_medium"
                       />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AMOUNT:"
                        android:textColor="#454545"
                        android:fontFamily="@font/googlesans_medium"
                        android:textSize="@dimen/_9sdp"/>
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_8sdp"
                        android:textColor="#454545"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:fontFamily="@font/googlesans_medium"
                        android:text="03-12-2021" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:background="#454545" />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="@font/googlesans_medium"
                    android:textColor="#E80D7B"
                    android:drawableRight="@drawable/ic_outline_file_download_24"
                    android:text="Download"/>


            </LinearLayout>


        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>