<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.FilterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
<!--<ListView
    android:layout_width="0dip"
    android:layout_weight="1"
    android:layout_height="wrap_content"
    android:id="@+id/filter_list"/>-->
        <TextView
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Brands"
            android:textColor="#000"
            android:fontFamily="@font/googlesans_regular"
            android:textSize="@dimen/_15sdp"
            android:id="@+id/brand"/>
<LinearLayout
    android:layout_width="0dip"
    android:layout_weight="1"
    android:visibility="gone"
    android:id="@+id/filter_checkbox_list"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<CheckBox
    android:layout_width="wrap_content" android:layout_weight="1"
    android:textColor="#000"
    android:fontFamily="@font/googlesans_medium"
    android:layout_height="wrap_content"
    android:text="BB Combo"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:textColor="#000"
            android:fontFamily="@font/googlesans_medium"
            android:layout_height="wrap_content"
            android:text="Biotique"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:textColor="#000"
        android:fontFamily="@font/googlesans_medium"
        android:layout_height="wrap_content"
        android:text="Blue Heaven"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:textColor="#000"
        android:fontFamily="@font/googlesans_medium"
        android:layout_height="wrap_content"
        android:text="Lakme"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:textColor="#000"
        android:fontFamily="@font/googlesans_medium"
        android:layout_height="wrap_content"
        android:text="Love Beauty and planet"/>
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_weight="1"
        android:textColor="#000"
        android:fontFamily="@font/googlesans_medium"
        android:layout_height="wrap_content"
        android:text="Plum"/>

</LinearLayout>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="bottom"
        android:gravity="bottom">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/btn_filterclear"
            android:textColor="@color/white"
            android:fontFamily="@font/googlesans_bold"
            android:background="@color/colorPrimary"
            android:text="Clear"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:id="@+id/filter_apply"
            android:fontFamily="@font/googlesans_bold"
            android:background="@color/formal_color"
            android:text="Apply"/>

    </LinearLayout>


</FrameLayout>